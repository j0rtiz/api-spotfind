<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity">

  <LinearLayout
    android:id="@+id/linearLayoutMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
      android:id="@+id/imgPoster"
      android:layout_width="300px"
      android:layout_height="445px" />

    <TextView
      android:id="@+id/txtTitulo"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/txtAno"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/txtGenero"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/txtAtores"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/txtImdbId"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/txtTipo"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/txtLocal"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textStyle="bold" />

    <TextView
      android:id="@+id/txtValor"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textStyle="bold" />

    <Button
      android:id="@+id/listaComprasBtn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20sp"
      android:layout_marginBottom="20sp"
      android:onClick="comprasListagem"
      android:text="@string/botao_compras" />

    <Button
      android:id="@+id/listaFilmesBtn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:onClick="sessoesListagem"
      android:text="@string/lista_filmes_botao" />

  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
