<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/colorPrimary"
  tools:context=".DetalheCompraActivity">

  <FrameLayout
    android:layout_width="395dp"
    android:layout_height="455dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:layout_editor_absoluteY="259dp">

    <TableLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_margin="20dp"
      tools:ignore="MissingConstraints">

      <TableRow android:layout_margin="10dp">

        <TextView
          android:layout_width="96dp"
          android:background="@color/colorPrimary"
          android:padding="3dip"
          android:text="@string/titulo"
          android:textColor="#fefefe"
          android:textStyle="bold" />

        <TextView
          android:id="@+id/txtTitulo"
          android:layout_width="272dp"
          android:gravity="right"
          android:padding="3dip"
          android:textAlignment="center"
          android:textColor="#fefefe" />
      </TableRow>

      <TableRow android:layout_margin="10dp">

        <TextView
          android:background="@color/colorPrimary"
          android:padding="3dip"
          android:text="@string/ano_filme"
          android:textColor="#fefefe"
          android:textStyle="bold" />

        <TextView
          android:id="@+id/txtAno"
          android:gravity="right"
          android:padding="3dip"
          android:textAlignment="center"
          android:textColor="#fefefe" />
      </TableRow>

      <TableRow android:layout_margin="10dp">

        <TextView
          android:background="@color/colorPrimary"
          android:padding="3dip"
          android:text="@string/genero"
          android:textColor="#fefefe"
          android:textStyle="bold" />

        <TextView
          android:id="@+id/txtGenero"
          android:gravity="right"
          android:padding="3dip"
          android:textAlignment="center"
          android:textColor="#fefefe" />
      </TableRow>


      <TableRow android:layout_margin="10dp">

        <TextView
          android:background="@color/colorPrimary"
          android:padding="3dip"
          android:text="@string/atores"
          android:textColor="#fefefe"
          android:textStyle="bold" />

        <TextView
          android:id="@+id/txtAtores"
          android:gravity="right"
          android:padding="3dip"
          android:textAlignment="center"
          android:textColor="#fefefe" />
      </TableRow>

      <TableRow android:layout_margin="10dp">

        <TextView
          android:background="@color/colorPrimary"
          android:padding="3dip"
          android:text="@string/imbbId"
          android:textColor="#fefefe"
          android:textStyle="bold" />

        <TextView
          android:id="@+id/txtImdbId"
          android:gravity="right"
          android:padding="3dip"
          android:textAlignment="center"
          android:textColor="#fefefe" />
      </TableRow>

      <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">

        <TextView
          android:background="@color/colorPrimary"
          android:padding="3dip"
          android:text="@string/local"
          android:textColor="#fefefe"
          android:textStyle="bold" />

        <TextView
          android:id="@+id/txtLocal"
          android:gravity="right"
          android:padding="3dip"
          android:textAlignment="center"
          android:textColor="#fefefe" />
      </TableRow>

      <TableRow android:layout_margin="10dp">

        <TextView
          android:background="@color/colorPrimary"
          android:padding="3dip"
          android:text="@string/valor_compra"
          android:textColor="#fefefe"
          android:textStyle="bold" />

        <TextView
          android:id="@+id/txtValor"
          android:gravity="right"
          android:padding="3dip"
          android:textAlignment="center"
          android:textColor="#fefefe" />
      </TableRow>
    </TableLayout>
  </FrameLayout>

  <ImageView
    android:id="@+id/imageViewCapa"
    android:layout_width="393dp"
    android:layout_height="243dp"
    tools:layout_editor_absoluteX="8dp"
    tools:layout_editor_absoluteY="16dp"
    tools:srcCompat="@tools:sample/backgrounds/scenic" />
</androidx.constraintlayout.widget.ConstraintLayout>
